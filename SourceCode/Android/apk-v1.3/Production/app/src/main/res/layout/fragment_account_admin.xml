<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/viewBtnEdit"
            style="@style/btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/save" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="10dp" >

            <!-- Account ID -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_id" />

            <EditText
                android:id="@+id/etViewAccountID"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:editable="false" />

            <!-- Account Name -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name" />

            <EditText
                android:id="@+id/etViewAccountName"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <!-- Contact Email -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_id" />

            <EditText
                android:id="@+id/etViewContactEmail"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:singleLine="true" />

            <!-- Website -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website" />

            <EditText
                android:id="@+id/etViewWebsite"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:singleLine="true" />

            <!-- Contact Person -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cnt_person" />

            <EditText
                android:id="@+id/etViewContactPerson"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <!-- Contact Phone -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cnt_phone" />

            <EditText
                android:id="@+id/etViewContactPhone"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:inputType="phone"
                android:digits="01234567890+-"
                android:lines="1"
                android:singleLine="true" />

            <!-- skype Account -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skype_acc" />

            <EditText
                android:id="@+id/etViewSkypeAcc"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/theme_color"
                android:text="@string/account_restriction"
                android:textColor="@color/white"
                android:textSize="@dimen/edittext_size" />

            <!-- Max No Device -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/max_no_device" />

            <EditText
                android:id="@+id/etViewMaxNoDevices"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <!-- Max Users -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_users" />

            <EditText
                android:id="@+id/etViewMaxUsers"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/theme_color"
                android:text="@string/account_address"
                android:textColor="@color/white"
                android:textSize="@dimen/edittext_size" />

            <!-- Address -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/address" />

            <EditText
                android:id="@+id/etViewAddress"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:maxLines="3" />

            <!-- Zip / Postal Code -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zim_postal_code" />

            <EditText
                android:id="@+id/etViewZipPostalCode"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <!-- City -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city" />

            <EditText
                android:id="@+id/etViewCity"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <!-- Country -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country" />

            <EditText
                android:id="@+id/etViewCountry"
                style="@style/view_admin_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_input"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/theme_color"
                android:text="@string/account_units"
                android:textColor="@color/white"
                android:textSize="@dimen/edittext_size" />

            <!-- Volume Unit -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/volume_unit" />

            <Spinner
                android:id="@+id/spVolumeUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/volume_unit" />

            <!-- SpeedUnit -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_unit" />

            <Spinner
                android:id="@+id/spSpeedUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/speed_unit" />

            <!-- Distance Units -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_unit" />

            <Spinner
                android:id="@+id/spDistanceUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/distance_unit" />

            <!-- Fuel Efficiency -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuel_efficiency" />

            <Spinner
                android:id="@+id/spFuelEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/fuel_efficiency" />

            <!-- Pressure Unit -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure_unit" />

            <Spinner
                android:id="@+id/spPressureUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/pressure_unit" />

            <!-- Temperature Unit -->

            <TextView
                style="@style/speed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_unit" />

            <Spinner
                android:id="@+id/spTemperatureUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/btn_dropdown"
                android:entries="@array/temp_unit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>