<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- DeviceID -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_id" />

        <EditText
            android:id="@+id/etViewDeviceId"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />
        
         <!-- Vehicle Type -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_type" />

        <EditText
            android:id="@+id/etViewVehicleTypeId"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />
        <!-- DeviceName -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_name" />

        <EditText
            android:id="@+id/etViewDeviceName"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

      <!--   Device Type ID-->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_type" />

        <Spinner
            android:id="@+id/spDeviceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/vehicle_type" /> 

     
        <!-- Contact Phone -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cnt_phone" />

        <EditText
            android:id="@+id/etViewContactPhone"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:digits="01234567890+-"
            android:singleLine="true"
            android:background="@drawable/account_input"
            android:inputType="phone" />

        <!-- Vehicle Registration -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_registration" />

        <EditText
            android:id="@+id/etViewVehicleRegistration"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

        <!-- Registration Expiration Date -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_exp_date" />

        <EditText
            android:id="@+id/etViewRegExpDate"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

        <!-- Company Name -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name" />

        <EditText
            android:id="@+id/etViewCompanyName"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/theme_color"
            android:text="@string/fuel_data"
            android:textColor="@color/white"
            android:textSize="@dimen/edittext_size" />

        <!-- Min Fuel Filling -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/min_fuel_filling" />

        <EditText
            android:id="@+id/etViewMinFuelFilling"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

        <!-- Min Fuel Theft -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/min_fuel_theft" />

        <EditText
            android:id="@+id/etViewMinFuelTheft"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

        <!-- Tank Capacity -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/tank_capacity" />

        <EditText
            android:id="@+id/etViewTankCapacity"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

        <!-- Avg Consumption -->

        <TextView
            style="@style/speed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/avg_consumption" />

        <EditText
            android:id="@+id/etViewAvgConsumption"
            style="@style/view_admin_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lines="1"
            android:singleLine="true"
            android:background="@drawable/account_input" />

